@model TeacherReviews.Models.Teacher

@{
    ViewBag.Title = "Index";
}

<h2>Reviews for @Model.Name</h2>

@Html.RouteLink("remove all", "reviews_clear", new { id = Model.Id })
<br />

@Html.Partial("_Reviews", Model)

<form action="@Url.RouteUrl("reviews_add")" method="post">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TeacherReview</h4>
        <hr />
        @Html.ValidationSummary(true)
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <label for="review" class="col-md-2 control-label">Review:</label>
            <div class="col-md-10">
                <textarea name="review" rows="10" cols="30" class="form-control" maxlength="1024" ></textarea>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Your Review" class="btn btn-default" /><br /><h4>Only one review allowed per user</h4>
            </div>
        </div>
    </div>
</form>






